
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<br />
<br />
<button class="btn btn-primary" id="btn1">Button 1</button>
<button class="btn btn-warning" id="btn2">Button 2</button>
<button class="btn btn-info" id="btn3">Button 3</button>
<button class="btn btn-danger" id="btn4">Button 4</button>
<button class="btn btn-default" style="background-color:lightcoral" id="btn5">Button 5</button>

<script>
    $('#btn1').click(function () {
        swal("Hello World!");
    });
      $('#btn2').click(function () {
          swal("Burası Başlık", "burası içerik");
      });
       $('#btn3').click(function () {
          swal("Burası Başlık", "burası içerik","success");
       });
     $('#btn4').click(function () {
         swal("Click on either the button or outside the modal.")
   .then((value) => {
    swal(`The returned value is: ${value}`);
});
     });
     $('#btn5').click(function () {
         swal({
  title: "Are you sure?",
  text: "Once deleted, you will not be able to recover this imaginary file!",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
    swal("Poof! Your imaginary file has been deleted!", {
      icon: "success",
    });
  } else {
    swal("Your imaginary file is safe!");
  }
});
    });
</script>

