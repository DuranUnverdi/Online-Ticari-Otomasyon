@model List<SatisHareket>
@using MVCTicariOtomasyon.Models.Siniflar
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    @foreach (var k in Model)
    {

        <tr>

            <td>
                @k.SatisID
            </td>

            <td>
                @k.Urun.UrunAd
            </td>
            <td>
                @k.Cariler.CariAd @k.Cariler.CariSoyad
            </td>
            <td>
                @k.Personel.PersonelAd@k.Personel.PersonelSoyad
            </td>
            <td>
                @k.Adet
            </td>
            <td>
                @k.Fiyat
            </td>
            <td>
                @k.ToplamTutar
            </td>
            <td>
                @k.Tarih
            </td>
            <td><a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-group" style="background-color:darkgrey;color:white">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

