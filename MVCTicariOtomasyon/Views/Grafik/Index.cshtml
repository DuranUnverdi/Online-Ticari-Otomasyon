    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategoriler ve Ürün sayıları");
    grafik.AddLegend(title: "Değerler");
    grafik.AddSeries(
        name: "Veriler",
        chartType:"Bar",
        xValue:new []
        {
            "Beyaz Eşya",
            "Televizyon",
            "Bilgisayar",
            "Küçük Ev Aletleri"
        },
        yValues: new[]
        {
            50,
            250,
            340,
            620

        }
        );
    grafik.Write();
}