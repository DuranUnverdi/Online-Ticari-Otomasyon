@using MVCTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb" mb-4>
    <li class="breadcrumb-item active"><span>Departman Adı : <b>@ViewBag.dp</b></span></li>
</ol>
<br />
<table class="table table-hover">
    <tr>
    
        <th>Ad</th>
        <th>Soyad</th>
     
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>

    <td>@x.PersonelAd</td>
    <td>@x.PersonelSoyad</td>
   
    <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-default" style="background-color:blanchedalmond">Satışlar</a></td>
</tr>

    }

</table>

