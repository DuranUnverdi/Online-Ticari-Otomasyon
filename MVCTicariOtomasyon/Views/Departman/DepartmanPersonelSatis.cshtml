@using MVCTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>DepartmanPersonelSatis</h2>
<br />
<ol class="breadcrumb" mb-4>
    <li class="breadcrumb-item active"><span>Personel Adı : <b>@ViewBag.dpers</b></span></li>
</ol>
<table class="table table-condensed">
    <tr>
      
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach(var x in Model)
    {
<tr>
  
    <td>@x.Urun.UrunAd</td>
    <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
    <td>@x.Fiyat ₺</td>
    <td>@x.Adet</td>
    <td>@x.ToplamTutar ₺</td>
    <td>@x.Tarih</td>
    <td><a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a></td>
</tr>
    }
    
</table>
