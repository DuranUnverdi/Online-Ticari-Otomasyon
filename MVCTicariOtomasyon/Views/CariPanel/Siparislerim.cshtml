@using  MVCTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />
<table class="table table-bordered">
    <tr>
        <td>Ürün Adı</td>
        <td>Fiyat</td>
        <td>Tarih</td>
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Fiyat</td>
            <td>@Convert.ToDateTime(x.Tarih.ToString("dd/MM/yyyy"))</td>
        </tr>
    }
</table>
